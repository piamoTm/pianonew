<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pianoadroid">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/music_yyj"
        android:label="@string/app_name"
        android:roundIcon="@drawable/music_yyj"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MakeMusic"></activity>
        <activity android:name=".Play_List"></activity>
        <activity
            android:name=".Main_menu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Bluetooth_test"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>